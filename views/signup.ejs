<body>
    <%- include('_nav_bar') %>
    <main class="auth_page_main">

    
  <h3>Welcome to this blog!</h3>
 

    <div class="container" id="divisor">
        <div class="policy-terms">
            <p>By continuing,  you are creating an account and hereby agree to our <span class="terms">User Agreement</span> and 
                <span class="terms">Privacy Policy</span></p>
        </div>
  

        <form action="/article/signup" method="POST">
        <div id="divisor">
            <label for="username">Name</label>
            <input type="text" id="username" name="username" required>
        </div>
        <div id="divisor">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required>
        </div>
        <div class="buttons" id="divisor">
            <button type="submit">Register</button>
            <div id="divisor">
                <p>Already have a password? <span> <a href="/article/login"> <span class="terms">Login</span></a></span></p>
               
            </div>
           
        </div>
      
        </form>
</div>


</main>
</body>
